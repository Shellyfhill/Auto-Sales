@model AutoSales.Models.Service

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Service Type</h2>
<hr />

<form asp-action="Delete">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CarId" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Miles" disabled class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Miles" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="ServiceType.Name" disabled class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="ServiceType.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-1">
                            <label asp-for="Details" disabled class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Details" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-1">
                                <label asp-for="Price" disabled class="custom-label"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="Price" class="form-control" />
                            </div>
                        </div>

                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                        <a asp-action="Create" asp-route-carId="@Model.CarId" class="btn btn-sm btn-success">Back to List</a>
                    </div>
</form>
